# Sui & Walrus Configuration (Official SDK Integration)
SUI_NETWORK=testnet
SUI_FULLNODE_URL=https://fullnode.testnet.sui.io:443
WALRUS_MAX_RETRIES=3
WALRUS_TIMEOUT=60000
WALRUS_USE_BACKUP=true

# Sponsored Transaction Configuration
SPONSORED_TRANSACTIONS=true
# SECURITY: Store private key in environment variable, not file
DEVELOPER_PRIVATE_KEY=
STORAGE_EPOCHS=100
# Optional: Developer address for verification (public)
DEVELOPER_ADDRESS=

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_MAX_BACKUPS=10
BACKUP_COMPRESSION=false
BACKUP_ENCRYPTION=false
BACKUP_ENCRYPTION_KEY=

# Validation Configuration
VALIDATION_STRICT=false
VALIDATION_MAX_ACTION_LENGTH=500
VALIDATION_MAX_STATE_SIZE=

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_MAX_FILE_SIZE=
LOG_MAX_FILES=5
LOG_STRUCTURED=false
LOG_INCLUDE_METADATA=true


# OpenAI Configuration
# OpenAI API configuration and settings for Story 3.1

# API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Settings
OPENAI_MODEL=gpt-3.5-turbo

# Rate Limiting & Safety
MAX_API_CALLS_PER_DAY=1000
AI_RATE_LIMIT_PER_USER=10
AI_REQUEST_TIMEOUT=15000

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BASE_DELAY=1000
RETRY_MAX_DELAY=10000

# Cost Controls
TOKEN_USAGE_WARNING_THRESHOLD=8000
COST_ESTIMATE_ENABLED=true

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30000

# Development Settings
OPENAI_DEBUG_MODE=false
OPENAI_LOG_LEVEL=info

# Server Configuration
# Server port and host settings
PORT=3001
HOST=localhost
NODE_ENV=development

# API Configuration
# Frontend URL for CORS and other API configurations
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Production URLs (will override development URLs when NODE_ENV=production)
PROD_FRONTEND_URL=https://suisaga.com
PROD_SERVER_URL=https://api.suisaga.com

# Database & Storage
# Database configuration for development/production
DATABASE_URL=sqlite:./data/suisaga.db
STORAGE_PATH=./data

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_please_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
