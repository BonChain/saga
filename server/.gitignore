# Server-specific gitignore

# Development dependencies
node_modules/

# Environment files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Build outputs
dist/
build/

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Runtime data
pids
*.pid
*.seed
*.pid.lock

# Coverage directory used by tools like istanbul
coverage/
*.lcov

# nyc test coverage
.nyc_output

# Temporary files
*.tmp
*.temp
.tmp/

# Cache directories
.cache/
.parcel-cache/

# IDE specific files
.vscode/
.idea/

# OS files
.DS_Store
Thumbs.db

# Test files
test-results/
junit.xml

# Nodemon ignore
.nodemonignore

# PM2 logs and pids
.pm2/
ecosystem.config.js.backup

# Walrus storage cache
.walrus-cache/

# Database files (if using local DB)
*.db
*.sqlite
*.sqlite3

# Upload directories (if file uploads)
uploads/
temp-uploads/
