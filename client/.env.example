# SuiSaga Frontend Environment Variables
# Copy this file to .env.local and configure for your environment

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_SERVER_URL=http://localhost:3001

# Development URLs (for local development)
VITE_DEV_API_URL=http://localhost:3001
VITE_DEV_FRONTEND_URL=http://localhost:5173

# Production URLs (for production builds)
VITE_PROD_API_URL=https://api.suisaga.com
VITE_PROD_FRONTEND_URL=https://suisaga.com

# Sui Blockchain Configuration
VITE_SUI_NETWORK=testnet
# Options: devnet, testnet, mainnet

# Wallet Configuration
VITE_PREFERRED_WALLETS=Sui Wallet,Suiet, phantom
# Comma-separated list of preferred wallet names

# Auto-connect wallet on page load
VITE_AUTO_CONNECT=true
# Options: true, false

# Application Configuration
VITE_APP_NAME=SuiSaga
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEV_MODE=true
# Options: true, false

# Feature Flags
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_PERFORMANCE_OVERLAY=true

# Authentication Configuration
VITE_AUTH_TIMEOUT=30000
# Authentication request timeout in milliseconds

VITE_SESSION_STORAGE_KEY=suisaga_auth_token
# Key for storing JWT token in localStorage

# Security Configuration
VITE_ENABLE_CORS=true
# Enable CORS for API requests

# UI Configuration
VITE_ENABLE_ANIMATIONS=true
# Enable retro gaming animations and effects

VITE_THEME=default
# Options: default, dark, high-contrast