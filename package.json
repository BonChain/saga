{
  "name": "suisaga",
  "version": "1.0.0",
  "description": "SuiSaga - Living World Blockchain Game",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "build": "npm run build:client && npm run build:server && npm run build:contract",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "build:contract": "cd contract && npm run build",
    "lint": "npm run lint:client && npm run lint:server && npm run lint:contract",
    "lint:client": "cd client && npm run lint",
    "lint:server": "cd server && npm run lint",
    "lint:contract": "cd contract && npm run lint",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ../contract && npm install"
  },
  "keywords": ["sui", "blockchain", "game", "living-world", "ai", "multiplayer"],
  "author": "SuiSaga Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  }
}